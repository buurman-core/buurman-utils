{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "node",
        "lib": ["esnext"],
        "strict": true,
        "resolveJsonModule": true,
        "noUnusedLocals": true,
        "noEmit": true,
        "downlevelIteration": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true
    },
    "include": ["src/index.ts"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}
